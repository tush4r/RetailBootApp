<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
   http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">



    <changeSet id="01" author="tushar">

        <dropTable cascadeConstraints="true"
                   schemaName="public"
                   tableName="transactions"/>

        <dropTable cascadeConstraints="true"
                   schemaName="public"
                   tableName="customer"/>

        <dropTable cascadeConstraints="true"
                   schemaName="public"
                   tableName="product"/>

        <createTable tableName="customer"
                     remarks="Customer Data">
            <column name="cust_id" type="int">
                <constraints nullable="false" unique="true" primaryKey="true"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false" unique="false"/>
            </column>
        </createTable>
        <createTable tableName="product"
                     remarks="A table to contain all the products">
            <column name="pid" type="varchar(255)">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="name" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createTable tableName="transactions"
                     remarks="A table to contain all the transactions">
            <column name="tid" type="int">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="cust_id" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="date" type="timestamp">
                <constraints nullable="false" />
            </column>
            <column name="amount" type="decimal">
                <constraints nullable="false"/>
            </column>

        </createTable>

        <addForeignKeyConstraint baseTableName="transactions" baseColumnNames="cust_id"
                                 constraintName="cust_id"
                                 referencedTableName="customer" referencedColumnNames="cust_id"/>
        <insert tableName="customer">
            <column name="cust_id" valueNumeric="1"/>
            <column name="name" value="testuser"/>
        </insert>
    </changeSet>

</databaseChangeLog>